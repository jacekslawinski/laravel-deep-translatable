{
    "name": "marksitko/auto-translatable",
    "description": "Translates automatic model attributes via DeepL",
    "keywords": [
        "marksitko",
        "auto-translatable"
    ],
    "homepage": "https://github.com/marksitko/auto-translatable",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mark Sitko",
            "email": "hey@marksitko.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "MarkSitko\\AutoTranslatable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MarkSitko\\AutoTranslatable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "MarkSitko\\AutoTranslatable\\AutoTranslatableServiceProvider"
            ],
            "aliases": {
                "AutoTranslatable": "MarkSitko\\AutoTranslatable\\AutoTranslatableFacade"
            }
        }
    }
}
